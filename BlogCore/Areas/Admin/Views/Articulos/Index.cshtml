
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row mt-4 mb-5">
        <div class="col-6">
            <h2 class="text-primary">Lista de Articulos</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Nuevo Articulo</a>
        </div>
    </div>

    <table class="table table-hover table-borderless mt-lg-5" id="tblArticulos" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Categoria</th>
                <th>Fecha creacion</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/articulo.js"></script>
}