@model BlogCore.Models.ViewModels.HomeVM
@{
    ViewData["Title"] = "Home Page";
}

<!--SLIDER-->

    <header>
        <div id="carouselIndicator" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner bg-primary">
                @{ int cont = 0;}
                @foreach (var item in Model.Slider)
                {
                    var itemDinamico = cont++ == 0 ? "item active" : "item";

                    <div class="carousel-item @itemDinamico">
                        <img src="@Url.Content(item.UlrImagen)" style="height:300px" class="mx-auto d-block" />
                        <h1 class="text-white text-center my-5">@Html.Raw(item.Nombre)</h1>

                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                }
            </div>
        </div>
    </header>


    <div class="row fondoTitulo mt-5">
        <div class="col-sm-12 py-5">
            <h1 class="text-center text-white">
                Ultimos cursos y Tutoriales
            </h1>
        </div>
    </div>
   
<!--Articulos-->

    @if (Model.Articulo.Count() > 0)
    {
    <hr />
    <div class="row">
        @foreach (var art in Model.Articulo.OrderBy(o => o.Id))
        {
            <div class="col-sm-3">
                <div class="card">
                    <img src="@art.UrlImagen" class="img-thumbnail" width="100%" style="height: 350px;" />
                    <div class="card-body">
                        <h5 class="text-center">@art.Nombre</h5>
                        <p>@art.FechaCreacion</p>
                        <a asp-action="Details" class="btn btn-success" style="border-radius: 2px;" asp-route-id="@art.Id">Mas informacion</a>
                    </div>
                </div>
            </div>
        }
    </div>
    }
    else
    {
        <p>No hay articulos</p>
    }